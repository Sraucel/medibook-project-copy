<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/acceptedAppointment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/acceptedShiftId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acceptedEndTime"
            android:layout_marginTop="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/acceptedPatientUid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Patient UID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/acceptedStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acceptedPatientUid"
            android:layout_marginTop="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/acceptedEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acceptedStartTime"
            android:layout_marginTop="12dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/acceptedStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acceptedShiftId"
            android:layout_marginTop="12dp"
            android:text="TextView" />

        <Button
            android:id="@+id/appointmentCancelBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/divider3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="13dp"
            android:text="Cancel" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/acceptedStatus"
            android:layout_marginTop="5dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/acceptInfo"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignStart="@+id/appointmentCancelBtn"
            android:layout_alignEnd="@+id/appointmentCancelBtn"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:text="Info"
            android:textSize="14sp"
            android:textStyle="italic" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>


</LinearLayout>